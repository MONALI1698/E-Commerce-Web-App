<h2> Add New Item </h2>

<%= form_with model: item, url: items_path, method: :post, local: true, scope: :item do |f| %>
<div class ="form-group">
    <%= f.label :item_name, "Item Name:",class: "col-md-4 control-label" %><br>
    <%= f.text_field :name,class: "form-control" %>
</div>

<div class ="form-group">
    <%= f.label :item_description, "Item Description:",class: "col-md-4 control-label" %><br>
    <%= f.text_field :description,class: "form-control" %>
</div>

<div class ="form-group">
    <%= f.label :item_category, "Item Category:",class: "col-md-4 control-label" %><br>
    <%= f.text_field :category,class: "form-control" %>
</div>

<div class ="form-group">
    <%= f.label :item_price, "Item Price:",class: "col-md-4 control-label" %><br>
    <%= f.text_field :price,class: "form-control" %>
</div>


<div class= "form-group">
<%= f.label:item_image, "Upload Image/Video:", class:"col-md-4 control-label"%>
<%= f.file_field :file, class:"form-control", direct_upload: true%>

<div class = "form-group">
    <%= f.check_box :is_viewable %>  <%= label_tag "Viewable to buyers." %><br>

</div>


<%= f.submit "Add Item", class:"btn btn-primary" %>


<% end %>