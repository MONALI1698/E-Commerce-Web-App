<div class="jumbotron text-center hoverable p-4">

  <div class="row">

    <div class="col-md-4 offset-md-1 mx-3 my-3">

    
      <div class="view overlay">
      <% if item.file.attached?%>
          <% if item.file.image?%>
          <%= image_tag url_for(item.file.variant(resize: '300x400'))%>
          <% else %>
           <%= video_tag url_for(item.file), style:'width:100%; height:auto', controls: ''%>
           <% end %>
        <a>
          <div class="mask rgba-white-slight"></div>
        </a>
        <% end %>
      </div>

    </div>
   
    <div class="col-md-7 text-md-left ml-3 mt-3">

     
      
        <h6 class="h6 pb-1"><i class="fas fa-desktop pr-1"></i> <%=item.category%> </h6>
      

      <h4 class="h4 mb-4"> <%=item.name%> </h4>

      <p class="font-weight-normal"> Description: <%=item.description%> </p>
      <p class="font-weight-normal"><strong> Price: <%=item.price%> </strong></p>

      <% if item.creator == current_user %>
        <%= link_to 'Edit', edit_item_path(item), class:"btn btn-primary" %>
       <%= link_to 'Delete', item_path(item), method: :delete, class:"btn btn-danger" %>
       <% end %>

     

    </div>

  </div>

</div>