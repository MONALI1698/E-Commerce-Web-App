<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


    <div  class="field">
    <%= f.label :"Enter your name :" %>
    <%= f.text_field :name, autofocus: true %>
  </div>
<div class="field">
    <%= f.label :"Enter your Username : " %>
    <%= f.text_field :user_name, autofocus: true  %>
  </div>
<div class="field">
    <%= f.label :"Enter your Phone number : " %>
    <%= f.text_field :phone_number, autofocus: true  %>
  </div>

    <div class="field">
    <%= f.label "Enter Email Address : " %> 
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
   <div class="field">
    <%= f.label "Confirm Email Address : " %> 
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label "Create Password:"%>
   
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "Confirm Password : " %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
   
    <div><%= f.check_box :is_buyer, {}, true %> <%= f.label :is_buyer, "Buyer" %> </div>
    <div><%= f.check_box :is_seller, {}, true %> <%= f.label :is_seller, "Seller" %> </div>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
