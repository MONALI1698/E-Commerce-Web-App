<center><h1><b>ITEM LIST</b></h1></center>

<% itemlist.each do |it|%>


        <div class="jumbotron text-center hoverable p-4">
        
            <div class="row">
            
                <div class="col-md-4 offset-md-1 mx-3 my-3">
            
                
                <div class="view overlay">
                    <img src="https://mdbootstrap.com/img/Photos/Others/laptop-sm.jpg" class="img-fluid" alt="Sample image for first version of blog listing">
                    <a>
                    <div class="mask rgba-white-slight"></div>
                    </a>
                </div>
            
                </div>
            
                <div class="col-md-7 text-md-left ml-3 mt-3">
            
                              
                    <h6 class="h6 pb-1"><i class="fas fa-desktop pr-1"></i> <%=it.category%> </h6>
                
            
                    <h4 class="h4 mb-4"> <%=it.name%> </h4>
                
                    <p class="font-weight-normal"> Description: <%=it.description%> </p>
                    <p class="font-weight-normal"><strong> Price: <%=it.price%> </strong></p>
                    
                    
                    <%= link_to 'View', admin_item_path(it), class:"btn btn-primary" %>
                    <%= link_to 'Delete', admin_item_path(it), method: :delete, class:"btn btn-danger" %>
                   
                    
            
                </div>
            
            </div>
        
        </div>
<% end %>
