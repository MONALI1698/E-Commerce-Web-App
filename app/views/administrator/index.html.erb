<center><h1><b>ITEM LIST</b></h1></center>

<% itemlist.each do |it|%>


        <div  style="background-color: lightgrey" class="jumbotron text-center hoverable p-4 ">
        
            <div class="row">
            
                <div class="col-md-4 offset-md-1 mx-3 my-3">
            
                
                <div class="view overlay">
                    <% if it.file.attached?%>
                        <% if it.file.image?%>
                        <%= image_tag url_for(it.file.variant(resize: '300x400'))%>
                        <% else %>
                        <%= video_tag url_for(it.file), style:'width:100%; height:auto', controls: ''%>
                        <% end %>
                        <a>
                        <div class="mask rgba-white-slight"></div>
                        </a>
                    <% end %>
                </div>
                
                </div>
            
                <div class="col-md-7 text-md-left ml-3 mt-3">
            
                  <h4 class="h4 mb-3"><strong> <%=it.name%> </strong> </h4> 

                  <h4 class="h4 mb-3"> <%=it.category%> </h4>
                             
                
                    <h4 class="h4 mb-3"> <%=it.description%> </h4>
                    <h4 class="h4 mb-3"> Price: <%=it.price%></h4>
                    
                    
                    <%= link_to 'View Item', admin_item_path(it), class:"btn btn-primary" %>
                    <%= link_to 'Delete Item', admin_item_path(it), method: :delete, class:"btn btn-danger" %>
                              
            
                </div>
            
            </div>
        
        </div>
<% end %>
