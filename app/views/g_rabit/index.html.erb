<center><h1><b>USER LIST</b></h1></center>

<% @users.each do |it|%>

        <div class="jumbotron text-center hoverable p-4">
        
            <div class="row">
            
                <div class="col-md-4 offset-md-1 mx-3 my-3">
            
                
                <div class="view overlay">
                    <img src="https://mdbootstrap.com/img/Photos/Others/laptop-sm.jpg" class="img-fluid" alt="Sample image for first version of blog listing">
                    <a>
                    <div class="mask rgba-white-slight"></div>
                    </a>
                </div>
            
                </div>
            
                <div class="col-md-7 text-md-left ml-3 ">
            
                              
                    <h4 class="h4 mb-4"><b class="fas fa-desktop pr-1"> <%=it.name%></b> </h4>
                                        
                    <p class="font-weight-normal"> Username: <%=it.user_name%> </p>
                    <p class="h4 mb-4"><i> <%=it.email%> </i></p>
                    
                    <% if it.is_buyer && !it.is_seller %>
                    <p><b> Buyer </b></p>    
                    <% end %>

                    <% if it.is_seller && !it.is_buyer %>
                    <p><b> Seller </b></p>
                    <% end %>

                    <% if it.is_seller && it.is_buyer %>
                    <p> Both </p>
                    <% end %>

                    <% if !it.is_seller && !it.is_buyer %>
                    <p> None </p>
                    <% end %>
         
                    <h5><b> <%= link_to ' DEACTIVATE USER ', '', class:"btn btn-danger btn-lg " %><b> </h5> 
                                
                </div>
            
            </div>
        
        </div>
<% end %>
