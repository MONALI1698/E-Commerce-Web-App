<center><h1>Conversation with <%= message_sender.name %></h1><center>

<div id = "refresh">
    <div id= "messagebox">
        <p>
            <% messages.each do |m| %>
                <%= "[" + m.sender + "]: " +  m.content %><br/>
              
        
            <% end %>

        </p>
    </div>
</div>

<div class = "footer">
    <%= form_with model: @message, url: message_board_path, method: :post, local: true, scope: :message do |m| %>
        <%= m.hidden_field :sender, :value => current_user.user_name %>
        <%= m.hidden_field :recipient, :value => params[:id] %>
       
       
        <div> <%= m.text_field :content, :size => "100%" %>  <%= m.submit "send", class: "btn btn-success" %> </div> 
    <% end %>

</div>